{
    "extends": "../tsconfig.base.json",
    "compilerOptions": {
        "lib": ["dom", "dom.iterable", "es2022"],
        "allowJs": false,
        "noEmit": true,
        "module": "ESNext",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "preserve",
        "baseUrl": ".",
        "paths": {
            "@/components/*": ["src/components/*"],
            "@/lib/*": ["src/lib/*"],
            "@/features/*": ["src/features/*"],
            "@/hooks/*": ["src/hooks/*"],
            "@/types": ["src/types"],
            "@/app/*": ["src/app/*"]
        },
        "incremental": true,
        "plugins": [
            {
                "name": "next"
            }
        ]
    },
    "include": ["next-env.d.ts", "jest-setup.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
    "exclude": ["node_modules"]
}
