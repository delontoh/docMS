{
    "name": "docms-backend",
    "version": "0.1.0",
    "private": true,
    "type": "module",
    "engines": {
        "node": ">=20.11.x"
    },
    "scripts": {
        "dev": "tsx watch src/server.ts",
        "build": "tsc -p .",
        "start": "node dist/server.js",
        "lint": "eslint . --ext .ts --max-warnings=0",
        "build:schema": "cat ./src/schema/base.prisma $(find ./src/features -type f -path '*/model/*.prisma' | sort) > ./src/schema/base.prisma",
        "prisma:generate": "npm run build:schema && npx prisma generate --schema=./src/schema/schema.prisma",
        "prisma:migrate": "npm run build:schema && npx prisma migrate dev --schema=./src/schema/schema.prisma",
        "prisma:deploy": "prisma migrate deploy"
    },
    "dependencies": {
        "@apollo/server": "^4.11.2",
        "@prisma/client": "^5.20.0",
        "body-parser": "^1.20.2",
        "cors": "^2.8.5",
        "dotenv": "^16.4.5",
        "express": "^4.19.2",
        "graphql": "^16.9.0",
        "graphql-tag": "^2.12.6"
    },
    "devDependencies": {
        "@types/body-parser": "^1.19.5",
        "@types/cors": "^2.8.17",
        "@types/express": "^4.17.21",
        "@types/node": "^22.7.7",
        "prisma": "^5.20.0",
        "tsx": "^4.19.1",
        "typescript": "^5.6.3"
    }
}