{
    "name": "docms-backend",
    "version": "0.1.0",
    "private": true,
    "type": "module",
    "engines": {
        "node": ">=20.11.x"
    },
    "imports": {
        "@controllers/*": "./src/controllers/*",
        "@models/*": "./src/models/*",
        "@routes/*": "./src/routes/*"
    },
    "scripts": {
        "dev": "cross-env NODE_ENV=development tsx watch src/server.ts",
        "build": "tsc -p .",
        "start": "cross-env NODE_ENV=production node dist/server.js",
        "lint": "eslint . --ext .ts --max-warnings=0",
        "prisma:generate": "npx prisma generate --schema=./src/prisma/schema",
        "prisma:migrate": "npx prisma migrate dev --schema=./src/prisma/schema",
        "prisma:deploy": "npx prisma migrate deploy --schema=./src/prisma/schema",
        "prisma:reset": "npx prisma migrate reset --schema=./src/prisma/schema --force",
        "prisma:seed": "tsx src/prisma/seed.ts"
    },
    "prisma": {
        "seed": "tsx src/prisma/seed.ts"
    },
    "dependencies": {
        "@prisma/client": "^6.7.0",
        "body-parser": "^1.20.2",
        "cors": "^2.8.5",
        "dotenv": "^16.4.5",
        "express": "^4.19.2"
    },
    "devDependencies": {
        "@types/body-parser": "^1.19.5",
        "@types/cors": "^2.8.17",
        "@types/express": "^4.17.21",
        "@types/node": "^22.18.13",
        "prisma": "^6.7.0",
        "tsx": "^4.19.1",
        "typescript": "^5.6.3"
    }
}