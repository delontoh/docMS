model Document {
    id          Int      @id @default(autoincrement())
    name        String   @db.VarChar(191)
    file_size   String   @db.TinyText
    file_type   String   @default("document")
    created_at  DateTime @default(now())
    updated_at  DateTime @updatedAt
    
    document_user_id    Int      
    created_by          User     @relation(fields: [document_user_id], references: [id], onDelete: Cascade, onUpdate: Cascade)
    folder_document_id  Int?
    belong_to_folder    Folder?  @relation(fields: [folder_document_id], references: [id], onDelete: SetNull, onUpdate: Cascade)

    @@unique([name, document_user_id])
    @@map("documents")
}